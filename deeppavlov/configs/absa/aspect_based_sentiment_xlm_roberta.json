{
  "dataset_reader": {
    "class_name": "semeval2015_absa_reader",
    "data_path": "semeval2015",
    "dataset_name": "semeval2015_absa_reader",
    "provide_pos": false
  },
  "dataset_iterator": {
    "class_name": "data_learning_iterator"
  },
  "chainer": {
    "in": [
      "x"
    ],
    "in_y": [
      "y"
    ],
    "pipe": [
      {
        "class_name": "torch_transformers_absa_preprocessor",
        "vocab_file": "{BASE_MODEL}",
        "in": [
          "x",
        ],
        "out": [
          "x_tokens",
          "attention_mask",
        ]
      },
      {
        "class_name": "torch_transformers_absa_labels_preprocessor",
        "vocab_file": "{BASE_MODEL}",
        "in": [
          "x",
          "y"
        ],
        "out": [
          "y_labels"
        ]
      },
      {
        "class_name": "torch_transformers_absa_tagger",
        "n_tags": 4,
        "pretrained_bert": "{BASE_MODEL}",
        "save_path": "{MODEL_PATH}",
	"load_path": "{MODEL_PATH}",
        "in": [
          "x_tokens",
          "attention_mask",
        ],
        "in_y": [
          "y_labels"
        ],
        "out": [
          "y_pred"
        ]
      },
      {
        "class_name": "absa_decoder",
        "vocab_file": "{BASE_MODEL}",
        "in": [
	      "x_tokens",
	      "y_pred"
    	],
    	"out": [
            "labels"
    	]
      }
    ],
    "out": [
      "labels"
    ]
  },
  "train": {
    "epochs": 5,
    "batch_size": 32,
    "metrics": [
      {
        "name": "absa_accuracy",
        "inputs": [
          "y_labels",
          "y_pred"
        ]
      }
    ],
    "validation_patience": 10,
    "val_every_n_batches": 20,
    "log_every_n_batches": 20,
    "show_examples": false,
    "evaluation_targets": [
      "valid",
      "test"
    ],
    "class_name": "torch_trainer"
  },
  "metadata": {
    "variables": {
      "BASE_MODEL": "natriistorm/DeepPavlov-ABSA",
      "ROOT_PATH": "ABSA",
      "DOWNLOADS_PATH": "{ROOT_PATH}",
      "MODELS_PATH": "{ROOT_PATH}",
      "MODEL_PATH": "trained_models"
    }
  }
}
